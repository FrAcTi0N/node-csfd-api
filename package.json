{
  "name": "node-csfd-api",
  "version": "2.3.1",
  "description": "ČSFD API in JavaScript. Amazing NPM library for scrapping csfd.cz :)",
  "main": "index.js",
  "author": "BART! <bart@bartweb.cz>",
  "scripts": {
    "start": "tsc -w",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "npm-prepare-dist -s postinstall -s prepare",
    "tsc": "tsc",
    "demo": "ts-node demo",
    "lint": "eslint ./src/**/**/* --fix",
    "test": "jest",
    "postinstall": "yarn husky install",
    "publish:next": "yarn && yarn build && yarn test --coverage true && npm publish --folder dist --tag beta",
    "postversion": "git push && git push --follow-tags",
    "release:beta": "npm version preminor --preid=beta -m \"chore(update): prelease %s β\"",
    "release:patch": "git checkout master && npm version patch -m \"chore(update): patch release %s 🐛\"",
    "release:minor": "git checkout master && npm version minor -m \"chore(update): release %s 🚀\"",
    "release:major": "git checkout master && npm version major -m \"chore(update): major release %s 💥\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5",
    "node-html-parser": "^5.3.3"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^28.1.0",
    "@types/node": "^16.11.26",
    "@types/node-fetch": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.17.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-fetch-mock": "^3.0.3",
    "npm-prepare-dist": "^0.4.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "repository": {
    "url": "git+https://github.com/bartholomej/node-csfd-api.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/bartholomej/node-csfd-api/issues"
  },
  "homepage": "https://github.com/bartholomej/node-csfd-api#readme",
  "keywords": [
    "csfd",
    "čsfd",
    "ratings",
    "movies",
    "films",
    "nodejs",
    "node",
    "typescript",
    "scraper",
    "parser",
    "api"
  ],
  "engines": {
    "node": ">= 12"
  },
  "license": "MIT"
}
