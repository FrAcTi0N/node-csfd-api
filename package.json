{
  "name": "node-csfd-api",
  "version": "0.6.1",
  "description": "Simple NPM library for scraping CSFD",
  "main": "index.js",
  "author": "BART! <bart@bartweb.cz>",
  "scripts": {
    "start": "tsc -w",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "npm-prepare-dist",
    "tsc": "tsc",
    "demo": "ts-node demo",
    "lint": "eslint ./src/**/**/* --fix",
    "test": "jest",
    "postversion": "git push && git push --follow-tags",
    "release:patch": "git checkout master && npm version patch -m \"chore(update): patch release %s 🐛 \"",
    "release:minor": "git checkout master && npm version minor -m \"chore(update): release %s 🚀\"",
    "release:major": "git checkout master && npm version major -m \"chore(update): major release %s 💥 \""
  },
  "dependencies": {
    "cross-fetch": "^3.0.6",
    "node-html-parser": "^1.4.9"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "npm-prepare-dist": "^0.1.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "repository": {
    "url": "git+https://github.com/bartholomej/node-csfd-api.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/bartholomej/node-csfd-api/issues"
  },
  "homepage": "https://github.com/bartholomej/node-csfd-api#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn run lint"
    }
  },
  "keywords": [
    "csfd",
    "čsfd",
    "ratings",
    "movies",
    "films",
    "nodejs",
    "node",
    "typescript",
    "scraper",
    "parser",
    "api"
  ],
  "engines": {
    "node": ">= 10"
  },
  "license": "MIT"
}
